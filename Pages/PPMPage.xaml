<Page x:Class="Grafika_Komputerowa.Pages.PPMPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Grafika_Komputerowa.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PPMPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Margin="2" Orientation="Horizontal">
            <Button Content="Load" Width="60" Click="LoadButtonClick"/>
            <Button Content="Save" Width="60" Click="SaveButtonClick"/>
        </StackPanel>
        <Image Grid.Row="1" Name="image" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
    </Grid>
</Page>
